    <script>
        window.onload = function() {
           if ($('form').length) {
			$('form').validate({
				errorPlacement: function () {
					return true;
				},
				rules: {
					filmAd: {
						required: true,
					},
					filmYapimYil: {
						required: true
					},
                    filmYapimYil1: {
						required: true
					},
                    filmYapimYil2: {
						required: true
					},
                    salonAdi: {
						required: true
					},
				},
				highlight: function (element, errorClass, validClass) {
					$(element).parents('.form-group').addClass(errorClass).removeClass(validClass);
					//   $(element).parent().addClass(errorClass);
				},
				unhighlight: function (element, errorClass, validClass) {
					$(element).parents('.form-group').removeClass(errorClass).addClass(validClass);
					//   $(element).parent().removeClass(errorClass);
				},
				submitHandler: function (form) {
					// var mailBody = 'Ad Soyad: ' + form.find('input[name=name]') + '<br> Telefon: ' + form.find('input[name=phone]') + '<br> E-posta: ' + form.find('input[name=email]') + '<br> Firma Adı: ' + form.find('input[name=companyName]');
					var alertMsg = 'Gönderim esnasında hata oluştu. Lütfen daha sonra tekrar deneyiniz.';
					var successMsg = 'İletiniz başarılı bir şekilde gönderilmiştir.';
					
					
                    $('form').trigger('submit');
				}
			});
		
        }
        }
    </script>
</head>
