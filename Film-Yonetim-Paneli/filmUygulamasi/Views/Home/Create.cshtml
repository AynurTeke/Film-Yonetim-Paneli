@model filmUygulamasi.Models.film

@{
    ViewData["Title"] = "Film Ekle";
    ViewBag.Title = "Film Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="mt-4">@ViewBag.Title</h1>
<br/>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewBag.Title
    </div>
    <div class="card-body">
        <form action="@Url.Action("Create","Home")" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label for="filmAd" class="control-label"></label>
                <input for="filmAd" name="filmAd" class="form-control" placeholder="Film adını giriniz" required />
                <span for="filmAd" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <label for="filmYapimYil" class="control-label"></label>
                <input for="filmYapimYil" name="filmYapimYil" class="form-control" placeholder="Filmin yapım yılını giriniz" required />
                <span for="filmYapimYil" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="KAYDET" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>