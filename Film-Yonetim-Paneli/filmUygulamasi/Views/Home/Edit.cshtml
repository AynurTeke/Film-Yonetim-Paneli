@model filmUygulamasi.Models.film

@{
    ViewData["Title"] = "Film Düzenle";
    ViewBag.Title = "Film Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="mt-4">@ViewBag.Title</h1>
<br/>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewBag.Title
    </div>
    <div class="card-body">
        <form action="@Url.Action("Edit","Home")" method="post">
            <input type="hidden" value="@Model.filmID" name="filmID" />
            <div class="form-group">
                <label for="filmAd" class="control-label"></label>
                <input for="filmAd" name="filmAd" value="@Model.filmAd" class="form-control" />
                <span class="text-danger error"></span>
            </div>
            <div class="form-group">
                <label for="filmYapimYil" class="control-label"></label>
                <input for="filmYapimYil" name="filmYapimYil" value="@Model.filmYapimYil" class="form-control" />
                <span class="text-danger error"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="GÜNCELLE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>