@model IEnumerable<filmUygulamasi.Models.film>
@{
    ViewData["Title"] = "Yıla Göre Arama";
    ViewBag.Title = "Yıla Göre Arama";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">@ViewBag.Title</h1>
<br/>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewBag.Title
    </div>
    
    <div class="card-body">
        <form action="@Url.Action("SearchYear","Home")" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label for="filmYapimYil1" class="control-label"></label>
                <input type="number" for="filmYapimYil1" name="filmYapimYil1" class="form-control" data-required="true" placeholder="Başlangıç Yıl" />
                <span for="filmYapimYil1" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <label for="filmYapimYil2" class="control-label"></label>
                <input type="number" for="filmYapimYil2" name="filmYapimYil2" class="form-control" data-required="true" placeholder="Bitiş Yıl" />
                <span for="filmYapimYil2" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="ARA" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-12 col-lg-12 p-3">
        @if (Model != null) {
         <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Film Adı</th>
                    <th>Film Yapım Yılı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.filmAd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.filmYapimYil)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        }
    </div>
</div>



