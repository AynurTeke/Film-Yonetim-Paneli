@{
    ViewData["Title"] = "Admin Girişi";
    ViewBag.Title = "Admin Girişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


  <h1 class="mt-4">@ViewBag.Title</h1>
<br/>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        @ViewBag.Title
    </div>
    <div class="card-body">
        <form action="@Url.Action("Login","Home")" method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label for="kullaniciAdi" class="control-label"></label>
                <input for="kullaniciAdi" name="kullaniciAdi" class="form-control" placeholder="Kullanıcı adını giriniz" required />
                <span for="kullaniciAdi" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <label for="Parola" class="control-label"></label>
                <input type="password" for="Parola" name="Parola" class="form-control" placeholder="Parola giriniz" required />
                <span for="Parola" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="GİRİŞ YAP" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>  




